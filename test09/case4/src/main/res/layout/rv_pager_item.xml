<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="12344"
        android:textSize="100dp"
        android:maxLines="1"
        app:autoSizeMaxTextSize="200dp"
        app:autoSizeMinTextSize="50dp"
        app:autoSizeTextType="uniform"/>

<!--    autoSizeTextType 规定了是否适配父布局显示内容 有两个选项 uniform 和 none-->
<!--    autoSizeMaxTextSize 最大文字大小 在textView未撑满父布局时 起作用-->
<!--    autoSizeMinTextSize 最小文字大小 在textView撑满父布局后 起作用-->

</androidx.constraintlayout.widget.ConstraintLayout>