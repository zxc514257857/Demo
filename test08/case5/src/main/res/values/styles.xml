<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--圆角-->
    <style name="RoundedStyle">
        <!--cornerFamily 表示角处理方式 有rounded 圆角(圆润的角弧度) 和cut 切角(直接切下去 比较生硬)两种-->
        <!--<item name="cornerFamily">rounded</item>-->
        <item name="cornerFamily">rounded</item>
        <!--cornerSize  表示圆角大小 可以用50dp 或者百分比 50%表示-->
        <item name="cornerSize">20dp</item>
    </style>

    <!--圆-->
    <style name="CircleStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--切角-->
    <style name="ChamferingStyle">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">20dp</item>
    </style>

    <!--菱形-->
    <style name="RhombusStyle">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--叶子-->
    <style name="LeafStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
    </style>

    <!--半圆-->
    <style name="SemicircleStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeTopRight">50%</item>
    </style>

    <!--六边形-->
    <style name="HexagonStyle">
        <item name="cornerFamily">cut</item>
        <item name="cornerSizeTopLeft">30%</item>
        <item name="cornerSizeTopRight">30%</item>
        <item name="cornerSizeBottomLeft">30%</item>
        <item name="cornerSizeBottomRight">30%</item>
    </style>

    <!--无默认圆角形状-->
    <style name="NoCornerStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>

    <!--其他测试形状1-->
    <style name="OtherStyle1">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopRight">50%</item>
    </style>

    <!--其他测试形状2-->
    <style name="OtherStyle2">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeTopRight">50%</item>
    </style>

    <!--其他测试形状3-->
    <style name="OtherStyle3">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">52%</item>
        <item name="cornerSizeTopRight">52%</item>
        <item name="cornerSizeBottomLeft">30%</item>
        <item name="cornerSizeBottomRight">30%</item>
    </style>

    <!--其他测试形状4-->
    <style name="OtherStyle4">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeBottomLeft">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
    </style>
</resources>



    