<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_pie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="圆饼图" />

        <Button
            android:id="@+id/btn_vbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="垂直柱状图" />

        <Button
            android:id="@+id/btn_hbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="水平柱状图" />

        <Button
            android:id="@+id/btn_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="折线图" />

        <Button
            android:id="@+id/btn_radar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="雷达图" />

        <Button
            android:id="@+id/btn_scatter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="散列图" />

        <com.zhr.test.ticker.TickerView
            android:id="@+id/tickerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textColor="#000000"
            android:textSize="44sp"
            app:ticker_animationDuration="1500"
            app:ticker_defaultCharacterList="alphabet" />

        <LinearLayout
            android:id="@+id/ll_dot"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="UselessLeaf">

<!--            <View-->
<!--                android:layout_width="15dp"-->
<!--                android:layout_height="15dp"-->
<!--                android:background="@drawable/dot_dadb" />-->

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>